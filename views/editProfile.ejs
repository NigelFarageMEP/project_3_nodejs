<div class="col-sm-6 col-sm-offset-3">

    <h1>Edit Profile</h1>

    <form action="/profile?_method=PATCH" method="post">
        <div class="form-group">
            <label>Name</label>
            <input value="<%= currentUser.local.name %>" class="form-control" name="local[name]">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input value="<%= currentUser.local.email %>" class="form-control" name="local[email]">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="local[password]">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Update Profile</button>
    </form>

    <hr>
</div>
